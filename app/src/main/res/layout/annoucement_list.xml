<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:layout_height="200dp"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
              android:scaleType="centerCrop"
               android:id="@+id/annoucementImage"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Title of Annoucement"
                       android:textStyle="bold"
                       android:textColor="@color/white"
                       android:layout_marginStart="20dp"
                       android:id="@+id/title_annoucement"
                       android:layout_marginTop="20dp"
                       android:textSize="22sp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Dear valued community members, we are thrilled to announce the upcoming launch of our innovative product, designed to enhance your daily experiences. Stay tuned for more details and join us in this exciting journey!"
                       android:layout_below="@+id/title_annoucement"
                       android:layout_marginStart="20dp"
                       android:textColor="@color/white"
                       android:layout_marginTop="4dp"
                       android:layout_marginHorizontal="5dp"
                       android:id="@+id/annoucement_description"
                       android:textSize="12sp"
                       />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_below="@id/annoucement_description"
                 android:layout_height="wrap_content"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginVertical="10dp"
                     android:text="View Annoucement"
                     android:layout_marginStart="20dp"
                     android:textColor="#FEC10F"
                     android:id="@+id/viewAnnoucement"/>
                 <ImageView
                     android:id="@+id/edit"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginEnd="20dp"
                     android:layout_centerVertical="true"
                     android:layout_toLeftOf="@+id/delete"
                     android:layout_marginTop="5dp"
                     android:src="@drawable/baseline_mode_edit_24"/>
                 <ImageView
                     android:id="@+id/delete"
                     android:layout_width="30sp"
                     android:layout_height="30sp"
                     android:layout_marginTop="5dp"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="8dp"
                     android:src="@drawable/baseline_delete_24"/>

             </RelativeLayout>
               </RelativeLayout>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="2"
                   android:id="@+id/annoucementImageDisplay"
                   android:scaleType="fitXY"
                   android:layout_marginEnd="5dp"
                   android:layout_marginVertical="8dp"
                   />

           </LinearLayout>
       </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>