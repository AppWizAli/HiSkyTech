<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Annoucement"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#454343"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginTop="18sp"
        android:background="#4AAAF6"
        android:textColor="@color/white"
        android:id="@+id/select_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annoucement Title"
        android:layout_marginTop="18sp"
        android:textSize="19sp"
        android:layout_marginStart="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:inputType="text"
        android:id="@+id/annoucement_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annoucement Description"
        android:textSize="19sp"
        android:layout_marginTop="18sp"
        android:layout_marginStart="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:inputType="text"
        android:id="@+id/annoucement_description"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Image"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginTop="18sp"
        android:background="#4AAAF6"
        android:textColor="@color/white"
        android:id="@+id/select_image_display"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:id="@+id/ann_image"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:id="@+id/disp_image"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:id="@+id/cancel"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:id="@+id/add"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>